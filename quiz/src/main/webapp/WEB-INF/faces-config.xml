<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    >


    <name>configQuiz</name>
    <navigation-rule>
        <from-view-id>/geographicQuiz.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{quizManager.geographicQuiz.resetQuiz}</from-action>
            <if>#{true}</if>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/historicQuiz.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{quizManager.historicQuiz.resetQuiz}</from-action>
            <if>#{true}</if>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>
